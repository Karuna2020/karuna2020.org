---
layout: base
---
<article class="post h-entry">
    <header>
        <h1 class="p-name">{{ title }}</h1>
        <time class="dt-published" datetime="{{ page.date | dateToISO }}">
            {{ page.date | dateToFormat(meta.dateFormat) }}
        </time>
    </header>
    
    <div class="content">
        {{ content | safe }}
    </div>

    <footer>
        <a href="/updates/" class="iconlink">
            <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M18 11H8.414l4.293-4.293-1.414-1.414L4.586 12l6.707 6.707 1.414-1.414L8.414 13H18z"/>
            </svg>
            Back to Updates
        </a>
    </footer>
</article>