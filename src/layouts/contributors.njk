---
layout: base
---
<article class="post h-entry">
    <header>
        <h1 class="p-name">{{ title }}</h1>
    </header>
    
    <div class="content">
        {{ content | safe }}
        <table>
          <thead>
            <tr>
              <th>Amount</th>
              <th>Donor</th>
              <th>Impact</th>
            </tr>
          </thead>
          <tbody>
            {% for person in data.donations %}
            <tr class="postlist">
                <td>
                  ₹{{ person.amount | numberify }}
                  {% if person.method === "In kind" %}in kind{% endif %}
                </td>
                <td>{{ person.name }}</td>
                <td>{{ (person.amount / 750) | round }} famil{% if ((person.amount / 750) | round) == 1 %}y{% else %}ies{% endif %} ({{ ((person.amount / 750) * 4) | round }}–{{ ((person.amount / 750) * 5) | round }} people)</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
    </div>

    <footer>
        <a href="/" class="iconlink">
            <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M18 11H8.414l4.293-4.293-1.414-1.414L4.586 12l6.707 6.707 1.414-1.414L8.414 13H18z"/>
            </svg>
            Back to Home
        </a>
    </footer>
</article>