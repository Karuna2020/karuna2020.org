<ol class="postlist" reversed>
{% for post in collections.posts | reverse %}
    {% if loop.index <= 5 %}
        <li>
            <a href="{{ post.url | url }}">{{ post.data.title }}</a>
            <time datetime="{{ post.date | dateToFormat('yyyy-LL-dd') }}">
                ({{ post.date | dateToFormat(meta.dateFormat) }})
            </time>
        </li>
    {% endif %}
{% endfor %}
</ol>
